pipeline 
{
    agent any
   // options {
        // Timeout counter starts AFTER agent is allocated
     //   timeout(time: 1, unit: 'SECONDS')
   // }

    environment { 
        CC = 'clang'
    }
    parameters{
        choice(name: 'j', choices: ['1', '20', '30'], description: 'Pick something')
    }
    tools {
        jdk 'java'
        maven 'Maven'
    }
    

    stages 
    {
        stage('sample')
        {
           steps {
                echo 'Hello World'
                }
        }
        stage('script')
        {
            steps
            {
                script
                {
                    def j = 20
                    for (int i=0; i<j; i++){
                        echo "The i value is $i"
                    }
                }
            }
        }    
        stage('clone')
        {
            steps
            {
                 
                
                    //checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/yarli9951/sample.git']])
                    checkout scmGit(branches: [[name: 'master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/yarli9951/sample.git']])
            }
        }
        stage('tool-validation') {
            steps {
                sh 'mvn --version'
                sh 'java --version'
            }
    }
        
}

}


